{
    "name": "inventory-api",
    "version": "1.0.0",
    "description": "Serverless REST API for Inventory Management System with SQS/SNS notifications",
    "main": "src/handlers/health.ts",
    "scripts": {
        "dev": "serverless offline start",
        "deploy:dev": "serverless deploy --stage dev --verbose",
        "deploy:prod": "serverless deploy --stage prod --verbose",
        "remove:dev": "serverless remove --stage dev",
        "remove:prod": "serverless remove --stage prod",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:unit": "jest --testPathPattern=tests/unit",
        "test:integration": "jest --testPathPattern=tests/integration",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "serverless",
        "aws",
        "lambda",
        "dynamodb",
        "sqs",
        "sns",
        "cognito"
    ],
    "author": "Madhur",
    "license": "MIT",
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.490.0",
        "@aws-sdk/client-sns": "^3.490.0",
        "@aws-sdk/client-sqs": "^3.490.0",
        "@aws-sdk/lib-dynamodb": "^3.490.0",
        "@middy/core": "^5.2.0",
        "@middy/http-cors": "^5.2.0",
        "@middy/http-error-handler": "^5.2.0",
        "@middy/http-json-body-parser": "^5.2.0",
        "http-errors": "^2.0.0",
        "uuid": "^9.0.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.131",
        "@types/http-errors": "^2.0.4",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.19.33",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.18.0",
        "@typescript-eslint/parser": "^6.18.0",
        "esbuild": "^0.19.11",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "serverless": "^3.38.0",
        "serverless-esbuild": "^1.50.1",
        "serverless-iam-roles-per-function": "^3.2.0",
        "serverless-offline": "^13.3.2",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
